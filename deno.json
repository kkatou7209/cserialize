{
	"name": "@yukimura/cserialize",
	"publish": {
		"exclude": [
			"dist/"
		]
	},
	"version": "0.0.1",
	"license": "MIT",
	"tasks": {
		"check": "deno check",
		"test": "deno test tests/ --parallel --fail-fast"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1",
		"@std/fs": "jsr:@std/fs@^1.0.4",
		"@std/path": "jsr:@std/path@^1.0.6"
	},
	"exports": "./mod.ts",
	"compilerOptions": {
		"lib": [
			"dom",
			"deno.ns"
		],
		"strict": true
	},
	"lint": {
		"include": ["src/"],
		"rules": {
			"tags": ["recommended"]
		}
	},
	"fmt": {
		"include": ["src/"],
		"useTabs": true,
		"lineWidth": 80,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": true
	}
}
